@model WebApplication2.Models.Wypozyczenia
@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dodaj wypożyczenie</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.IdKlienta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdKlienta)
                @Html.ValidationMessageFor(model => model.IdKlienta)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdRoweru, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdRoweru)
                @Html.ValidationMessageFor(model => model.IdRoweru)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataWypozyczenia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataWypozyczenia, new { htmlAttributes = new { @type = "date" } })
                @Html.ValidationMessageFor(model => model.DataWypozyczenia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataZwrotu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataZwrotu, new { htmlAttributes = new { @type = "date" } })
                @Html.ValidationMessageFor(model => model.DataZwrotu)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KosztWypozyczenia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KosztWypozyczenia)
                @Html.ValidationMessageFor(model => model.KosztWypozyczenia)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>
